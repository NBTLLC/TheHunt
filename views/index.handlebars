{{!-- add a company modal --}}

<div id="companyInputModal" class="modal">
	<div class="modal-content">
		<div class="container">
			<div class="row">
				<form class="col s12" action="/api/add_company" method="post" id="newCompanyForm">
					<div class="row">
						<div class="input-field col s12">
							<label for="companyName">Enter Company Name: (required) </label>
							<input id="companyName" type="text" name="company_name" value="" placeholder="" required>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label for="positionTitle">Position Title: (required)</label>
							<input id="positionTitle" type="text" name="position_title" value="" placeholder="" required>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label for="dateAdded">Date added to
								<span>The
									<span></span>Hunt</span> (mm/dd/yyyy): (required)</label>
							<input id="dateAdded" type="text" pattern="\d{1,2}/\d{1,2}/\d{4}" name="date_added" value="" placeholder="" required>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label for="websiteURL">Website URL: </label>
							<input id="websiteURL" type="url" name="website_url" value="" placeholder="">
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label for="hiringManagerName">Hiring Manager Name: </label>
							<input id="hiringManagerName" type="text" name="hiring_manager_name" value="" placeholder="">
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label for="hiringManagerPhone">Hiring Manager Phone (format: xxx-xxx-xxxx): </label>
							<input id="hiringManagerPhone" type="tel" pattern="^\d{3}-\d{3}-\d{4}$" name="hiring_manager_phone" value="" placeholder="">
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<label for="hiringManagerEmail">Hiring Manager Email: </label>
							<input id="hiringManagerEmail" type="email" name="hiring_manager_email" value="" placeholder="">
						</div>
						<div class="row">
							<div class="input-field col s12">
								<label for="companyNotes">Notes:</label>
								<textarea name="company_notes" placeholder="This area is for general notes about the company and for the interview" class=""
								 rows="10" id="companyNotes"></textarea>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<select id="boardPosition" name="board_position" required>
									<option value="" disabled selected>Select your current status of this company (Required)</option>
									<option value="Interested">Interested</option>
									<option value="Applied">Applied</option>
									<option value="Phone">Phone</option>
									<option value="inPerson">In Person</option>
									<option value="Offer">Offer</option>
									<option value="Rejected">Rejected</option>
								</select>
								<label>Your Hunt Status</label>
							</div>
						</div>
						<input type="submit" value="OK" class="waves-effect waves-light btns">
				</form>
				</div>

			</div>

		</div>
	</div>

	{{!-- confirm company delete --}}



	<div id="confirmDelete" class="modal">
		<div class="modal-content">
			<h4>Are you sure you would like to delete this company?</h4>
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-close waves-effect waves-green btn-flat" id="deleteConfirm">YES</a>
