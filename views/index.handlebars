							</div>
						</div>
						<div class="col s6">
							<div class="col-content sub-column-content">
								<h5>Applied</h5>
							</div>
							<div class="dragDrop" ondrop="drop(event)" ondragover="allowDrop(event)" id="Applied" data-board-position="Applied">
								{{> companies/company-block-applied}}
							</div>
						</div>
					</div>


				</div>
				<div class="col s4 main-column-section" id="column 2">
					<div class="row">
						<div class="col s6">
							<div class="col-content sub-column-content">
								<h5>Phone</h5>
							</div>
							<div class="dragDrop" ondrop="drop(event)" ondragover="allowDrop(event)" id="Phone" data-board-position="Phone">
								{{> companies/company-block-phone}}
							</div>
						</div>
						<div class="col s6">
							<div class="col-content sub-column-content">
								<h5>In Person</h5>
							</div>
							<div class="dragDrop" ondrop="drop(event)" ondragover="allowDrop(event)" id="inPerson" data-board-position="inPerson">
								{{> companies/company-block-inPerson}}
							</div>
						</div>
					</div>

				</div>
				<div class="col s4 main-column-section" id="column 3">
					<div class="row">
						<div class="col s6">
							<div class="col-content sub-column-content">
								<h5>Offer</h5>
							</div>
							<div class="dragDrop" ondrop="drop(event)" ondragover="allowDrop(event)" id="Offer" data-board-position="Offer">
								{{> companies/company-block-offer}}
							</div>
						</div>
						<div class="col s6">
							<div class="col-content sub-column-content">
								<h5>Rejected</h5>
							</div>
							<div class="dragDrop" ondrop="drop(event)" ondragover="allowDrop(event)" id="Rejected" data-board-position="Rejected">
								{{> companies/company-block-rejected}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
